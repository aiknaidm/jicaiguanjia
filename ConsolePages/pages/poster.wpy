        // {
        //   type: 'image',
        //   url: '',
        //   top: 140,
        //   left: 145,
        //   width: 80,
        //   height: 80,
        //   borderRadius:40,
        // },
        {
          type: 'image',
          //url: 'https://d.funcodeit.com/test/mplogo-430.jpg',
          url: res.data.data.qrcode2,
          top: canvasHeight - 0.4 * ((height - 50 * a) / 1.77) - 52 * a,
          left: 0.6 * (canvasHeight / 1.77) / 2,
          width: 0.4 * (canvasHeight / 1.77),
          height: 0.4 * ((height - 50 * a) / 1.77)
