    wx.showLoading({
      title: '加载中', //提示的内容,
      mask: true, //显示透明蒙层，防止触摸穿透,
      success: res => {}
    });
   newapi.getQRCodeImg({
     suppliers_id:this.suppliers_id,
     path:'Live/pages/home?roomid='+this.roomid+'&suppliers_id='+this.suppliers_id

   }).then(res=>{
     wx.hideLoading();
    
     this.erweima=res.data.data
     this.$apply()
     return res.data.data
     
   }).then(res=>{
 console.log("res",res)
 this.initImg()
   })
