         return
      }
      wx.saveImageToPhotosAlbum({
        filePath: self.img,
        success(res) {
          wx.showToast({
            title: '保存成功', //提示的内容,
            icon: 'none', //图标,
            duration: 2000, //延迟时间,
            mask: true, //显示透明蒙层，防止触摸穿透,
            success: res => {}
          });
        }
      })
       
 
    },
