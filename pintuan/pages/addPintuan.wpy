                            </view>
                            <view class='txt txt2'>零售价：{{item.shop_price}}</view>
                            <view class='txt txt2'>活动商品：{{item.goods_name}}</view>
                        </view>
                        <view class='text'>
                            <view class='btn active ' catchtap="{{item.is_finished == 1?'':'cancleTap'}}" data-pt_id='{{item.pt_id}}'>已结束
