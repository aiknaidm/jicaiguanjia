        <view class='promotion-activity' wx:if="{{currentType==1}}">
            <view class="promotion-activity-list {{item.is_finished == 1?'promotion-activity-list2':''}}" wx:for="{{activitylist}}" wx:key='{{index}}' data-id='{{item.pt_id}}' data-index="{{index}}">
