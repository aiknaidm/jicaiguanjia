    line-height: 55rpx;
    padding-left: 10rpx;
  }
  /* 分享好友 */
  .share {
    position: absolute;
    right: 40rpx;
    bottom: 40rpx;
    color: #fff;
  }
  .share text {
    margin-right: 10rpx;
    color: #14c09a;
    font-size: 30rpx;
  }
  .share button {
    color: #fff;
  }
  .yizhan-list2 {
    position: absolute;
    top: 0;
    left: 0;
    width: 75%;
    height: 100%;
    /* padding: 40rpx; */
    background: #fff;
    /* -webkit-transform: translateY(-50%); */
    transform: translateX(-100%);
    -ms-transform: translateX(-100%);
    /* IE 9 */
    -moz-transform: translateX(-100%);
    /* Firefox */
