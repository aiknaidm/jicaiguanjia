    /* Safari 和 Chrome */
    -o-transform: translateX(-100%);
    color: #000;
    overflow: hidden;
    transition: transform 0.3s;
  }
  .list {
    transform: translateX(0);
    -ms-transform: translateX(0);
    /* IE 9 */
    -moz-transform: translateX(0);
